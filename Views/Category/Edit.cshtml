@model Category

<h1>Edit Category</h1>

<form method="post">
    <!-- Передача скрытых данных -->
    <input asp-for="Id" hidden/>

    <p>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </p>
    <p>
        <label asp-for="DisplayOrder"></label>
        <input asp-for="DisplayOrder" class="form-control" />
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </p>
    <p>
        <button type="submit" class="btn btn-success"><i class="fa-solid fa-pen"></i> Update</button>
        <a class="btn btn-dark" asp-controller="Category" asp-action="Index"><i class="fa-solid fa-arrow-left"></i> Back</a>
    </p>

    <p>
        <div asp-validation-summary="All"></div>
    </p>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}