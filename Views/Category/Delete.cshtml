@model Category

<h1>Delete Category</h1>

<form method="post" asp-action="DeletePost">
    <!-- Передача скрытых данных -->
    <input asp-for="Id" hidden />

    <p>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" disabled />
    </p>
    <p>
        <label asp-for="DisplayOrder"></label>
        <input asp-for="DisplayOrder" class="form-control" disabled />
    </p>
    <p>
        <button type="submit" class="btn btn-danger"><i class="fa-solid fa-square-minus"></i> Delete</button>
        <a class="btn btn-dark" asp-controller="Category" asp-action="Index"><i class="fa-solid fa-arrow-left"></i> Back</a>
    </p>
</form>