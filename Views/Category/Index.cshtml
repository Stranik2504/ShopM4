@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category";
}

<h1>Hello Category!</h1>

<p>
    <a class="btn btn-dark" asp-controller="Category" asp-action="Create"><i class="fa-solid fa-plus"></i> Create Category</a>
</p>

@if (Model.Count() > 0)
{
    <table class="table table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="55%">@item.Name</td>
                    <td width="35%">@item.DisplayOrder</td>
                    <td>
                        <a style="display: block; margin-left: auto; margin-right: auto;" class="btn btn-primary" asp-route-Id="@item.Id" asp-controller="Category" asp-action="Edit"><i class="fa-solid fa-pen"></i></a>
                    </td>
                    <td>
                        <a style="display: block; margin-left: auto; margin-right: auto;" class="btn btn-danger" asp-route-Id="@item.Id" asp-controller="Category" asp-action="Delete"><i class="fa-solid fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}



