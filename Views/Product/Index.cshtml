@model IEnumerable<Product>
@{
    ViewData["Title"] = "Product";
}

<h1>Products</h1>

<p>
    <a class="btn btn-dark" asp-controller="Product" asp-action="CreateEdit"><i class="fa-solid fa-plus"></i> Create Product</a>
</p>

@if (Model.Count() > 0)
{
    <table class="table table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="55%">@item.Name</td>
                    <td width="35%">@item.Price</td>
                    <td>
                        <a style="display: block; margin-left: auto; margin-right: auto;" class="btn btn-primary" asp-route-Id="@item.Id" asp-controller="Product" asp-action="CreateEdit"><i class="fa-solid fa-pen"></i></a>
                    </td>
                    <td>
                        <a style="display: block; margin-left: auto; margin-right: auto;" class="btn btn-danger" asp-route-Id="@item.Id" asp-controller="Product" asp-action="Delete"><i class="fa-solid fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products</p>
}



